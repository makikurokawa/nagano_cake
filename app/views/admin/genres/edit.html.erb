<div class="container">
  <div class="row">
    <h4 class="bg-light my-5 ml-2 text-center col-2">ジャンル編集</h4>
  </div>
  <div class="row mb-5">
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
    <table class="table table-borderless">
      <tr>
        <th class="col-3">ジャンル名</th>
        <td class="col-3"><%= f.text_field :name %></td>
        <td class="col-2"><%= f.submit '変更を保存', class: "btn btn-success px-3" %></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>



