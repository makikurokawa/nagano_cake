<div class="container">
  <div class="row">
    <h4 class="bg-light my-5 ml-2 text-center col-3">ジャンル一覧・追加</h4>
  </div>
  <div class="row my-5">
    <table>
      <tr>
        <th class="col-4">ジャンル名</th>
        <td classs="col-3">
          <%= form_with model: @genre, url:'/admin/genres', method: :post  do |f| %>
            <%= f.text_field :name, class: 'form-control genre_name', placeholder: 'ジャンル名' %>
        </td>
        <td class="col-3">
            <%= f.submit '新規登録', class: 'btn btn-success' %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>

  <div class="row">
    <table class="table col-4 mb-5">
      <thead class="bg-secondary">
        <th class="col-2">ジャンル</th>
        <th class="col-2"></th>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
