
<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url:'/admin/genres', method: :post  do |f| %>
  <div class="form-group">
    <label for="ganre_name">ジャンル名</label>
      <%= f.text_field :name, class: 'form-control genre_name' %>
  </div>
  <div class="form-group">
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>
<% end %>


<table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
            <th colspan="3" ></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>