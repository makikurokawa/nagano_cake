<h2><%= @customer.last_name + first_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <div class="form-group">
    <label for="customer_id">会員ID</label>
    <%= f.text_field :id, class: 'form-control_id' %>
  </div>
  <div class="form-group">
    <label for="customer_name">氏名</label>
    <%= f.text_field :last_name, class: 'form-control name' %>
    <%= f.text_field :first_name, class: 'form-control name' %>
  </div>
  <div class="form-group">
    <label for="customer_name_kana">フリガナ</label>
    <%= f.text_field :last_name_kana, class: 'form-control name_kana' %>
    <%= f.text_field :first_name_kana, class: 'form-control name_kana' %>
  </div>
  <div class="form-group">
    <label for="customer_postal_code">郵便番号</label>
    <%= f.text_field :postal_code, class: 'form-control postal_code' %>
  </div>
  <div class="form-group">
    <label for="customer_address">住所</label>
    <%= f.text_field :address, class: 'form-control address' %>
  </div>
  <div class="form-group">
    <label for="customer_telephone_number">電話番号</label>
    <%= f.text_field :telephone_number, class: 'form-control telephone_number' %>
  </div>
  <div class="form-group">
    <label for="customer_email">メールアドレス</label>
    <%= f.text_field :email, class: 'form-control email' %>
  </div>
  <div class="form-group">
    <label for="customer_is_deleted">会員ステータス</label>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, '有効' %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, '退会' %>
　</div>
  <div class="form-group">
    <%= f.submit '変更を保存', class: 'btn btn-sm btn-success' %>
  </div>
<% end %>