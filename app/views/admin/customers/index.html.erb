<h2>会員一覧</h2>


<table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            <th colspan="3" ></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to customer.last_name, first_name, admin_customer_path(customer.id) %>
            </td>
            <td>
              <%= customer.email %>
            </td>

            <% if customer.is_deleted == false %>
              <td class="text-success font-weight-bold">
                有効
              </td>
            <% else %>
              <td class="text-muted font-weight-bold">
                退会
              </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>