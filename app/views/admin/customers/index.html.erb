<div class="container">
  <div class="row">
    <h4 class="my-5 bg-light text-center col-2">会員一覧</h4>
  </div>
  <table class="table table-hover table-inverse">
    <thead class="table-secondary">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= customer.id %>
        </td>
        <td>
          <%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %>
        </td>
        <td>
          <%= customer.email %>
        </td>
        <% if customer.is_deleted == false %>
          <td class="text-success font-weight-bold">
            有効
          </td>
        <% else %>
          <td class="text-muted font-weight-bold">
            退会
          </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>



