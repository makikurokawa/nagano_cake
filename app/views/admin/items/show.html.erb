<div class="container">
  <div class="row">
    <h4 class="my-5 bg-light text-center col-2">商品詳細</h4>
  </div>
  <div class="row">
    <div class="col-4">
      <%= image_tag @item.get_image(300,200) %>
    </div>
    <div class="col-6">
      <table class="table table-borderless">
        <tr>
          <th class="co-1">商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th class="co-1">商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th class="co-1">ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th class="co-1">税込価格</br>(税抜価格)</th>
          <td class="font-weight-bold">
            <%= @item.with_tax_price.to_s(:delimited) %>
            (<%= @item.price.to_s(:delimited) %>)円
          </td>
        </tr>
        <tr>
          <th class="co-1">販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
              <p class="text-success font-weight-bold">販売中</p>
          　<% else %>
              <p class="text-secondary font-weight-bold">販売停止中</p>
          　<% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <%= link_to "編集する", edit_admin_item_path, class: 'btn btn-md px-5 mx-auto mb-5 btn-success' %>
  </div>
</div>
