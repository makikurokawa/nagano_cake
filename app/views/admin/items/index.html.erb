<div class="container">
  <div class="row">
    <h4 class="bg-light my-5 ml-2 text-center col-2">商品一覧</h4>
    <div class="box col-8"></div>
    <%= link_to "+", new_admin_item_path, class: "btn btn-success rounded-circle.p-0 col-1" %>
  </div>

<table class="table table-borderless">
        <thead class="table-secondary">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <th colspan="3" ></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to item.name, admin_item_path(item.id) %>
            </td>
            <td>
              <%= item.price.to_s(:delimited) %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <% if item.is_active == true %>
            <td class="text-success font-weight-bold">
            販売中
            </td>
            <% else %>
            <td class="text-muted font-weight-bold">
              販売停止中
            </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
</div>