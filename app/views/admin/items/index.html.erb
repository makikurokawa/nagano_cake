<h2>商品一覧</h2>


<table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <th colspan="3" ></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= item.name %>
            </td>
            <td>
              <%= item.price %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <% if item.is_active == true %>
            <td class="text-success font-weight-bold">
            販売中
            </td>
            <% else %>
            <td class="text-muted font-weight-bold">
              販売停止中
            </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>