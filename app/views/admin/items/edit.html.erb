<div class="container">
<h3>商品編集</h3>


    <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
        <div class="form-group">
          <label for="item_image">商品画像</label>
          <%= f.file_field :image, id:"image", placeholder: "商品画像", accept:"image/*", class: 'form-control-file item_image' %>
        </div>
        <div class="form-group">
          <label for="item_name">商品名</label>
          <%= f.text_field :name, id:"item_name", class: 'form-control name' %>
        </div>
        <div class="form-group">
          <label for="item_introduction">商品説明</label>
          <%= f.text_area :introduction, id:"item_intriduction", class: 'form-control introduction' %>
        </div>
        <div class="form-group">
          <label for="item_genre">ジャンル</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--", class: 'form-control introduction' %>
        </div>
        <div class="form-group">
          <label for="item_price">税抜価格（税込価格）</label>
          <%= f.text_field :price, id:"item_price", class: 'form-control price' %>円
        </div>
        <div class="form-group">
          <label for="item_is_active">販売ステータス</label>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '販売中' %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '販売停止中' %>

        </div>
        <div class="form-group">
          <%= f.submit '新規登録', class: 'btn btn-sm btn-success' %>
        </div>
      <% end %>
</div>