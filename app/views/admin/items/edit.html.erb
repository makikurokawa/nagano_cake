<div class="container">
  <div class="row">
    <h4 class="bg-light my-5 ml-2 text-center col-2">商品編集</h4>
  </div>
  <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
  <table class="table table-borderless mx-auto col-6">
    <tr>
      <th>商品画像</th>
      <td><%= f.file_field :image, id:"image", placeholder: "商品画像", accept:"image/*", class: 'form-control-file item_image' %></td>
    </tr>
    <tr>
      <th>商品名</th>
      <td><%= f.text_field :name, id:"item_name", class: 'form-control name' %></td>
    </tr>
    <tr>
      <th>商品説明</th>
      <td><%= f.text_area :introduction, id:"item_intriduction", class: 'form-control introduction' %></td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--", class: 'form-control introduction' %></td>
    </tr>
    <tr>
      <th>税抜価格</th>
      <td><%= f.text_field :price, id:"item_price", class: 'form-control price' %></td>
      <td>円</td>
    </tr>
     <tr>
      <th>販売ステータス</th>
      <td>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '販売中' %>
        　<%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売停止中' %>
      </td>
    </tr>
  </table>
  <div class="row">
    <%= f.submit '変更を保存', class: 'btn btn-sm btn-success px-5 mx-auto mb-5' %>
  </div>
  <% end %>
</div>
