<div class="container">
  <div class="row my-5 bg-light col-2">
    <h4>注文履歴一覧</h4>
  </div>
  <div class="row">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th class="col-3">購入日時</th>
          <th class="col-3">購入者</th>
          <th class="col-3">注文個数</th>
          <th class="col-3">注文ステータス</th>
          <th colspan="3" ></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to order.created_at, admin_order_path(order.id) %>
          </td>
          <td>
            <%= order.customer.last_name + order.customer.first_name %>
          </td>
          <td>
            <% total_quantity = 0 %>
            <% order.order_details.each do |order_detail| %>
            <% total_quantity += order_detail.quantity %>
            <% end %>
            <%= total_quantity %>
          </td>
          <td>
            <%= order.status_i18n %>
          </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row my-3">
    <%= paginate @orders %>
  </div>
</div>

