<div class="container">
  <div class="row mt-5">
    <div class="col-4">
      <%= image_tag @item.get_image(300,200) %>
    </div>
    <div class="col-6">
      <div class="item-box">
        <div class="item-name mb-3">
          <h3 class="font-weight-bold"><%= @item.name %></h3>
        </div>
        <div class="item-introduction font-weight-bold mb-5">
          <%= @item.introduction %>
        </div>
        <div class="item-price mb-3">
          <h4 class="font-weight-bold">￥<%= @price.to_s(:delimited) %>(税込)</h4>
        </div>
        <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :amount, *[1..10], { prompt: '個数選択' } %>
          　　　<%= f.submit "カートに入れる", class: "btn btn-success" %>
        <% end %>
    </div>
  </div>
</div>