<div class="container">
  <div class="row">
    <h4 class="font-weight-bold mt-5 mb-3">商品一覧</h4>
    <P>(全X件)</P>
  </div>
  <div class="row">
    <% @items.each do |item| %>
    <div class="box col-3 p-1">
      <%= link_to item_path(item.id) do %>
        <%= image_tag item.get_image(300,200) %></br>
      <% end %>
      <%= item.name %></br>
      ￥<%= item.price %></br>
    </div>
    <% end %>
  </div>
</div>