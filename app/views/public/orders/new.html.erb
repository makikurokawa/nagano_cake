<div class="container">
  <div class="row">
    <div class="col-3">
      <h4 class="text-center bg-light">注文情報入力</h4>
    </div>
     <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
       <div class="form-group">
         <label for="order_payment">支払方法</label>
           <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
           <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
           <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
           <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
        </div>
        <div class="form-group">
         <label for="order_address">お届け先</label>
           <%= f.radio_button :address, @current_customer.address %>
           <%= f.label :address, 'ご自身の住所' %>
           <%= @order.customer.address %>
           <%#= f.radio_button :address, %>
           <%= f.label :address, '登録住所から選択' %>
           <%= f.select :address_id, options_form_collection_for_select(Address.all. :id, :address_display) %>
           <%#= f.radio_button :address, %>
           <%= f.label :address, '新しいお届け先' %>
           <div class="row mb-3">
             <%= f.label "郵便番号(ハイフンなし)", class: "col-3" %>
             <%= f.text_field :postal_code, class: "form-control col-4" %>
           </div>
           <div class="row mb-3">
             <%= f.label "住所", class: "col-3" %>
             <%= f.text_field :address, class: "form-control col-9" %>
           </div>
           <div class="row mb-3">
             <%= f.label "宛名", class: "col-3" %>
             <%= f.text_field :name, class: "form-control col-4" %>
           </div>
        </div>
      <% end %>

  </div>
  <div class="row">
    <div class="col-12 text-center">
      <%#= link_to "確認画面へ進む", order_path(@order.id), class: "btn btn-lg btn-primary" %>
    </div>
  </div>
</div>