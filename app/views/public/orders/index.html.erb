<div class="container">
  <div class="row">
    <h5>注文履歴一覧</h5>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead style="background-color: #c0c0c0;">
        <th class="col-2">注文日</th>
        <th class="col-4">配送先</th>
        <th class="col-2">注文商品</th>
        <th class="col-2">支払金額</th>
        <th class="col-2">ステータス</th>
        <th class="col-2">注文詳細</th>
      </thead>
      <tbody>
        <% @orders.each do |orders| %>
          <tr>
            <td>
              <%= orders.created_at %>
            </td>
            <td>
              <%= orders.postal_code %></br>
              <%= orders.address %></br>
              <%= orders.name %>
            </td>
            <td>
              <%= @order_detail.item.name %>
            </td>
            <td>
              <%= orders.billing_amount %>円
            </td>
            <td>
              <%= orders.status %>
            </td>
            <td>
              <%= link_to "表示する", order_path(orders.id), class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
