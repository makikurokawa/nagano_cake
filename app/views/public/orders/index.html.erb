<div class="container">
  <div class="row">
    <h5 class="my-5 bg-light ">注文履歴一覧</h5>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead style="background-color: #c0c0c0;">
        <th class="col-2">注文日</th>
        <th class="col-3">配送先</th>
        <th class="col-2">注文商品</th>
        <th class="col-1">支払金額</th>
        <th class="col-2">ステータス</th>
        <th class="col-2">注文詳細</th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= l order.created_at %>
            </td>
            <td>
              <%= order.postal_code %></br>
              <%= order.address %></br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
              <% end %>
            </td>
            <td>
              <%= order.billing_amount.to_s(:delimited) %>円
            </td>
            <td>
              <%= order.status_i18n %>
            </td>
            <td>
              <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
