<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>
  </div>
  <div class="row">
    <P class="col-7">注文情報</P>
    <p class="col-5">請求情報</p>
  </div>
  <div class="row">
    <div class="box col-7">
      <table class="table table-bordered">
        <tr>
          <th class="col-2" style="background-color: #c0c0c0;">注文日</th>
          <td class="col-5"><%= @order.created_at %></td>
        </tr>
        <tr>
          <th class="col-2" style="background-color: #c0c0c0;">配送先</th>
          <td class="col-5">
            <%= @order.postal_code %></br>
            <%= @order.address %></br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="col-2" style="background-color: #c0c0c0;">支払方法</th>
          <td class="col-5">
            <% if @order.payment == 0 %>
              <p>クレジットカード</p>
            <% else %>
              <p>銀行振込</p>
            <% end %>
          </td>
        </tr>
        <tr>
          <th class="col-2" style="background-color: #c0c0c0;">ステータス</th>
          <td class="col-5"><%= @order.status %></td>
        </tr>
      </table>
    </div>
    <div class="box col-5">
      <table class="table table-bordered">
        <tr>
          <th class="col-2" style="background-color: #c0c0c0;">商品合計</th>
          <td class="col-2"><%= @total %></td>
        </tr>
        <tr>
          <th class="col-2" style="background-color: #c0c0c0;">配送料</th>
          <td class="col-2">
            <%= 800 %>
          </td>
        </tr>
        <tr>
          <th class="col-2" style="background-color: #c0c0c0;">ご請求額</th>
          <td class="col-2"><%= @order.billing_amount %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <p>注文内容</p>
  </div>
  <div class="row">
    <table class="table table-bordered col-8">
      <thead style="background-color: #c0c0c0;">
        <th class="col-4">商品名</th>
        <th class="col-2">単価(税込)</th>
        <th class="col-1">個数</th>
        <th class="col-1">小計</th>
      </thead>
      <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td>
              <%= order_detail.item.name %>
            </td>
            <td>
              <%= order_detail.item.with_tax_price %>
            </td>
            <td>
              <%= order_detail.quantity %>
            </td>
            <td>
              <%= order_detail.item.with_tax_price * order_detail.quantity %>
            </td>

          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>