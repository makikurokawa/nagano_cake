<div class="container">
  <div class="row">
    <h4 class="bg-light my-5">会員情報編集</h4>
  </div>

  <%= form_with model: @customer, url: customers_infomation_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-8">
      <div class="form-group">
        <div class="row my-2">
          <%= f.label "氏名", class: "col-3" %>
          <%= f.text_field :last_name, class: 'form-control name col-3' %>
          <div class="col-1"></div>
          <%= f.text_field :first_name, class: 'form-control name col-3' %>
        </div>
        <div class="row my-2">
          <%= f.label "フリガナ", class: "col-3" %>
          <%= f.text_field :last_name_kana, class: 'form-control name_kana col-3' %>
          <div class="col-1"></div>
          <%= f.text_field :first_name_kana, class: 'form-control name_kana col-3' %>
        </div>
        <div class="row my-2">
          <%= f.label "郵便番号", class: "col-3" %>
          <%= f.text_field :postal_code, class: 'form-control postal_code col-3' %>
        </div>
        <div class="row my-2">
          <%= f.label "住所", class: "col-3" %>
          <%= f.text_field :address, class: 'form-control address col-8' %>
        </div>
        <div class="row my-2">
          <%= f.label "電話番号", class: "col-3" %>
          <%= f.text_field :telephone_number, class: 'form-control telephone_number col-3' %>
        </div>
        <div class="row my-2">
          <%= f.label "メールアドレス", class: "col-3" %>
          <%= f.text_field :email, class: 'form-control email col-3' %>
        </div>
        <div class="row my-5">
          <div class="col-3"></div>
          <%= f.submit '編集内容を保存', class: 'btn btn-success px-5' %>
          <div class="col-3"></div>
          <%= link_to '退会する', customers_confirm_path, class: 'btn btn-danger px-3' %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>