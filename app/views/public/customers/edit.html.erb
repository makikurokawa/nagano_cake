<div class="container">
  <h4>会員情報編集</h4>

  <%= form_with model: @customer, url: customers_infomation_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-8">
      <div class="form-group">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th><label for="customer_name">氏名</label></th>
              <td><%= f.text_field :last_name, class: 'form-control name' %></td>
              <td><%= f.text_field :first_name, class: 'form-control name' %></td>
            </tr>
            <tr>
              <th><label for="customer_name_kana">フリガナ</label></th>
              <td><%= f.text_field :last_name_kana, class: 'form-control name_kana' %></td>
              <td><%= f.text_field :first_name_kana, class: 'form-control name_kana' %></td>
            </tr>
            <tr>
              <th><label for="customer_postal_code">郵便番号</label></th>
              <td><%= f.text_field :postal_code, class: 'form-control postal_code' %></td>
            </tr>
            <tr>
              <th><label for="customer_address">住所</label></th>
              <td><%= f.text_field :address, class: 'form-control address' %></td>
            </tr>
            <tr>
              <th><label for="customer_telephone_number">電話番号</label></th>
              <td><%= f.text_field :telephone_number, class: 'form-control telephone_number' %></td>
            </tr>
            <tr>
              <th> <label for="customer_email">メールアドレス</label></th>
              <td><%= f.text_field :email, class: 'form-control email' %></td>
            </tr>
            <tr>
              <th></th>
              <td>
                <%= f.submit '編集内容を保存', class: 'btn btn-sm btn-success' %>
              </td>
              <td></td>
              <td>
                <%= link_to '退会する', customers_confirm_path, class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% end %>
</div>