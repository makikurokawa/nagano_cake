<div class ="container">
  <h4>配送先登録/一覧</h4>
  <% form_with model: @address, url: addresses_path do |f| %>
  <table class="table table-borderless">
    <tr>
      <th><%= f.label "郵便番号(ハイフンなし)" %></th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th><%= f.label "住所" %></th>
      <td> <%= f.text_field :address %></td>
    </tr>
    <tr>
      <th><%= f.label "宛名" %></th>
      <td>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class: "btn btn-md btn-success" %>
      </td>
    </tr>
  </table>
  <% end %>

  <table class="table table-bordered border-dark">
    <thead class="table-light">
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </thead>
    <% @addresses.each do |address| %>
    <tbody>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path, class: "btn btn-success" %>
          <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>