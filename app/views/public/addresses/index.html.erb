<div class="container">
  <h4 class="my-5">配送先登録/一覧</h4>
  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
  <div class="form-group">
    <div class="row my-2">
      <%= f.label "郵便番号(ハイフンなし)", class: "col-3" %>
      <%= f.text_field :postal_code, class: "col-3" %>
    </div>
    <div class="row my-2">
      <%= f.label "住所", class: "col-3" %>
      <%= f.text_field :address, class: "col-6" %>
    </div>
    <div class="row my-2">
      <%= f.label "宛名", class: "col-3" %>
      <%= f.text_field :name, class: "col-3" %>
      <%= f.submit "新規登録", class: "btn btn-md btn-success" %>
    </div>
  </div>
  <% end %>

  <table class="table table-bordered border-dark">
    <thead class="table-light">
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </thead>
    <% @addresses.each do |address| %>
    <tbody>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
          <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>