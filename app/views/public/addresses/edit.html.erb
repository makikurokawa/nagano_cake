<div class="container">
  <h4 class="my-5">配送先編集</h4>
  <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
  <div class="form-group">
    <div class="row my-2">
      <%= f.label "郵便番号(ハイフンなし)", class: "col-3" %>
      <%= f.text_field :postal_code, class: "form-control col-3" %>
    </div>
    <div class="row my-2">
      <%= f.label "住所", class: "col-3" %>
      <%= f.text_field :address, class: "form-control col-6" %>
    </div>
    <div class="row my-2">
      <%= f.label "宛名", class: "col-3" %>
      <%= f.text_field :name, class: "form-control col-3" %>
      <div class="col-3"></div>
      <%= f.submit "変更内容を保存", class: "btn btn-md btn-success" %>
    </div>
  </div>
  <% end %>